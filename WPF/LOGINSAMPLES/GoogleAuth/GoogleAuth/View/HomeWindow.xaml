<hw:PlainWindow x:Class="GoogleAuth.View.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hw="http://schemas.hpod9.com/haley/wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleAuth.View"
        mc:Ignorable="d" CornerRadius="25"
        Title="HomeWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" ControlBoxStyle="Mac">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="{Binding UserName}" FontSize="45" Foreground="#FF383838" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="{Binding Email}" FontSize="24" Foreground="#FF383838" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 15"></TextBlock>
        <hw:PlainButton Width="180" CornerRadius="10" Height="30" Content="Sign out" Background="Purple" Foreground="White" FontSize="16" Command="{Binding CMDSignOut}"/>
    </StackPanel>
</hw:PlainWindow>
