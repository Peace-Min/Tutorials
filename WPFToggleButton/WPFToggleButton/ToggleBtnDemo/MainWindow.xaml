<Window x:Class="ToggleBtnDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToggleBtnDemo"
        xmlns:wd="http://schemas.hpod9.com/haley/demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="40">
        <wd:SimpleToggleButton  Height="40" SwitchWidth="40" Width="100" BorderThickness="0" BorderBrush="{x:Null}"  Foreground="White" CornerRadius="20"/>
        <wd:SimpleToggleButton  Height="40" SwitchWidth="50" Width="120" BorderThickness="0" BorderBrush="{x:Null}"  Foreground="White"/>
        <wd:SimpleToggleButton  Height="40" SwitchWidth="50" Width="120" BorderThickness="0" BorderBrush="{x:Null}"  Background="LightGray" ColorON="Purple" ColorOFF="Bisque"/>
        <wd:SimpleToggleButton  Height="40" SwitchWidth="50" Width="120" BorderThickness="0" BorderBrush="{x:Null}"  Foreground="White" CornerRadius="15"/>
        <wd:SimpleToggleButton  Height="40" SwitchWidth="50" Width="120" BorderThickness="0" BorderBrush="{x:Null}"  Foreground="White" DisplayText="False" ColorON="DarkSeaGreen" ColorOFF="MediumVioletRed"/>
    </StackPanel>
</Window>
